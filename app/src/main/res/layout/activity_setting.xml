<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9ad91"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.qq.a1843318972.mmvtcmessage.TopBar
        android:id="@+id/set_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:m_left_image="@drawable/back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="#529bff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:gravity="center_vertical"
            android:text="欢迎页状态" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Switch
            android:id="@+id/isWelcome"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:checked="true"
            android:showText="true"
            android:switchPadding="10dp"
            android:textOff="否"
            android:textOn="是" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="#529bff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:gravity="center_vertical"
            android:text="状态栏沉浸状态" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Switch
            android:id="@+id/isImmerse"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:checked="true"
            android:showText="true"
            android:switchPadding="10dp"
            android:textOff="否"
            android:textOn="是" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:text="状态栏颜色设置" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#11111a" />

    <ListView
        android:id="@+id/colorlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>